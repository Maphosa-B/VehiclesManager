@model  List<VehiclesManager.Entities.Branch>
@{
    ViewBag.Title = "Branches";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="card w-100 mb-2">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h5>Branches</h5>
            </div>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-border-style">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th width="80%">Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Name</td>

                                        <td>
                                            <a href="~/Lease/BranchLeaseRecords?branchId=@i.Id" class="mr-1 badge badge-pill badge-primary p-1">Lease Records</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card w-100">
        <div class="card-body">
            <div class="row">
                <div class="col-10 text-center">
                    <h5>There are no branches under this client</h5>
                </div>
            </div>
        </div>
    </div>


}



