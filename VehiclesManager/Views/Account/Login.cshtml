@{
    ViewBag.Title = "Clients";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <title>Flat Able - Premium Admin Template by Phoenixcoded</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/Template/assets/images/favicon.ico" type="image/x-icon">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/Template/assets/css/style.css">

    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.rtl.min.css" rel="stylesheet" />


</head>
<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">

            <img src="~/Template/assets/images/logo.png" alt="" class="img-fluid mb-4">

            <div class="card borderless">
                <div class="row align-items-center ">
                    <div class="col-md-12">


                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="card-body">
                                <h4 class="mb-3 f-w-400">Signin</h4>
                                <hr>
                                <div class="form-group mb-3">
                                    <input type="email" name="email" class="form-control" id="Email" placeholder="Email address" required>
                                </div>
                                <div class="form-group mb-4">
                                    <input type="password" name="password" class="form-control" id="Password" placeholder="Password" required>
                                </div>
                                <button class="btn btn-block btn-primary mb-4">Signin</button>
                                <hr>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signin ] end -->
    <!-- Required Js -->
    <script src="~/Template/assets/js/vendor-all.min.js"></script>
    <script src="~/Template/assets/js/plugins/bootstrap.min.js"></script>

    <script src="~/Template/assets/js/pcoded.min.js"></script>

    <script src="~/Scripts/alertify.min.js"></script>
    <script>

        $(function () {
            var status = '@TempData["status"]'
            if (status != '') {
                alertify.set('notifier', 'position', 'top-right');
                alertify.success(status);

            } else {
                var error = '@TempData["error"]'
                if (error != '') {
                    alertify.set('notifier', 'position', 'top-right');
                    alertify.error(error);
                }
            }
        });

    </script>
</body>

</html>